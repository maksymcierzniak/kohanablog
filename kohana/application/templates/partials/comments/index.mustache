<section class="comments" id="comments">
    <section class="previous-comments">
            <h3>{{__comments}}</h3>
    {{#get_comments}}
    <article class="comment {{cycle}}" id="comment-{{id}}">
        <header>
            <p><span class="highlight">{{user}}</span> {{__commented}} <time datetime="{{created}}">{{created}}</time></p>
        </header>
        <p>{{comment}}</p>
         </article>
    {{/get_comments}}
    {{^get_comments}}
        <p>{{__no_comments_for_post}}...</p>
    {{/get_comments}}
    </section>
    {{<comments/form_add}}
</section>
